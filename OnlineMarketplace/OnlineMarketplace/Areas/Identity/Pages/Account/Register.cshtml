@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section CSS {
    <link rel="stylesheet" type="text/css" href="~/css/sign-up.css" />
}
@inject SignInManager<ApplicationUser> SignInManager
@if (SignInManager.IsSignedIn(User))
{
    Response.Redirect("/");
}
else
{
    <div class="main-content">
        <div class="content-column">
            <p class="sign-in-title">Sign up to CodeMarket</p>
            <form class="login-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="login-form__error"></div>
                <p class="label">Name</p>
                <input asp-for="Input.Name" required type="text" class="login-form__input" id="name" placeholder="Name...">
                <span asp-validation-for="Input.Name" class="login-form__error"></span>
                <p class="label-2">Last Name</p>
                <input asp-for="Input.LastName" required type="text" class="login-form__input" id="last_name" placeholder="Last Name...">
                <span asp-validation-for="Input.LastName" class="login-form__error"></span>
                <p class="label-2">Email</p>
                <input asp-for="Input.Email" required type="email" class="login-form__input" id="email" placeholder="Email...">
                <span asp-validation-for="Input.Email" class="login-form__error"></span>
                <p class="label-2">Username</p>
                <input asp-for="Input.UserName" required type="text" class="login-form__input" id="usename" placeholder="Username...">
                <span asp-validation-for="Input.UserName" class="login-form__error"></span>
                <p class="label-2">Password</p>
                <input asp-for="Input.Password" required type="password" class="login-form__input" id="password" placeholder="Password...">
                <span asp-validation-for="Input.Password" class="login-form__error"></span>
                <p class="label-2">Confirm password</p>
                <input asp-for="Input.ConfirmPassword" required type="password" class="login-form__input" id="Confirmpassword" placeholder="Password...">
                <span asp-validation-for="Input.ConfirmPassword" class="login-form__error"></span>
                <p class="label-2">Date of birth</p>
                <input asp-for="Input.Date_Of_Birth" required type="date" class="login-form__input" id="birthdate" value="2001-01-01">
                <span asp-validation-for="Input.Date_Of_Birth" class="login-form__error"></span>
                <button type="submit" class="login-form__log-in">Create Account</button>
                <p class="text">Already have an CodeMarket Account?<a class="link" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Sign in here</a></p>
            </form>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
